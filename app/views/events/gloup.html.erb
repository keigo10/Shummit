<h2 style="font-size:60px;">掲示板</h2>

<div class="comment-destroy" style="text-align: right;">
  <%= link_to 'イベントページに戻る', @event,class:"btn btn-primary btn-lg" %>
</div>
<div style="padding: 50px 10px 80px 10px;">
  <%= form_for @bulletin_board, url: event_bulletin_boards_path(@event), method: :post do |f| %>
    <div class="row">
        <div class="col-sm-12">
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "参加メンバーでの情報共有" %>
        </div>
    </div>
    <%= f.submit "送信する", class: "btn btn-default btn-lg btn-base-1 mt-20 pull-right"%>
  <% end %>
</div>
<div>
  <table class="table" >
    <% @event.bulletin_boards.each do |bulletin_board| %>
          <tr class="comment">
            <td>
              <div class="comment-body bb" style="width:500px;">
                <div class="comment-avatar">
                  <div class="avatar">
                    <%= attachment_image_tag bulletin_board.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                  </div>
                </div>
                <div class="comment-text" style="width:800px;">
                  <div class="comment-author clearfix">
                      <a href="#" class="link-author" style="font-size:25px;"><%= bulletin_board.user.family_name %><%= bulletin_board.user.first_name %></a>
                      <span class="comment-meta">
                        <span class="comment-date" style="font-size:25px;"><%= @event.created_at.strftime('%Y/%m/%d') %></span>
                      </span>
                  </div>
                  <div class="comment-entry"><p style="font-size:25px;padding-top:"><%= bulletin_board.comment %><p></div>
                </div>
              </div>
            </td>
            <% if user_signed_in? && bulletin_board.user.id == current_user.id %>
            <td class="comment-destroy pull-right">
                  <%= link_to "コメントを削除する",event_bulletin_boards_path(@event.id, id: bulletin_board.id ), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger btn-lg" %>
            </td>
            <% end %>
          </tr>
      <% end %>
  </table>
</div>