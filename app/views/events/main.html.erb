<div class="main-visual">
  <div class="main-visual-content">
    <p class="main-visual-text" style="font-size: 500%;">
      shummit
    </p>
    <p class="main-visual-name" style="font-size: 200%;margin-top: 70px;">
      新しい趣味を見つけよう
    </p>
  </div>
</div>
<div class="containe"><h2>イベント一覧</h2></div>
<div class="container m-mainlist-main col-xs-12">
  <ul class = "m-mainlist-list">
  <% @events.each do |event| %>
    <li class="container m-mainlist__item">
      <div class="m-mainlist-item">
        <a>
          <span class="m-mainlist-item__ttl"><%= event.events_name %></span>
        </a>
        <p class="m-mainlist-item-event__period">
        <span class="m-mainlist-item-event__open"><%= event.event_status %></span>
          開催日：<%= event.holding %>
        </p>
        <div class="m-mainlist-item__link">
          <p class="m-mainlist-item-event__place"><h3 class="m-mainlist-item-event__placelink">主催者/<%= event.user.family_name %><%= event.user.first_name %></h3></p>
          <p class="m-mainlist-item-event__place"><h3 class="m-mainlist-item-event__placelink">参加費/<%= event.entrance_fee %>円</h3></p>
          <p class="m-mainlist-item-event__place"><h3 class="m-mainlist-item-event__placelink">参加人数/<%= event.persons %>人</h3></p>
          <%= link_to '詳細', event,class:"btn btn-primary center-block" %>
        </div>

        <div class="m-mainlist-item__link">
          <h4 class="m-mainlist-item__txt"><%= event.description %></h4>
          <p class="m-mainlist-item__map"><a class="m-mainlist-item__maplink">県名</a>
            市町村名
          </p>
          <p class="m-mainlist-item-event__place"><a class="m-mainlist-item-event__placelink">開催</a></p>
          <p class="m-mainlist-item-event__place"><a class="m-mainlist-item-event__placelink">ジャンル：<%= event.genre.genre_name %></a></p>
        </div>
        <a class="m-mainlist-item__img">
          <span><%= attachment_image_tag(event.genre, :genre_image, :fill, 160, 160, fallback: "no_image.jpg") %></span>
        </a>
      </div>
    </li>
  <% end %>
  </ul>
</div>
<table>
  <thead>
    <tr>
      <th>主催者</th>
      <th>ジャンル</th>
      <th>イベント名</th>
      <th>参加費</th>
      <th>スポーツ</th>
      <th>参加人数</th>
      <th>イベントステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.user.family_name %><%= event.user.first_name %></td>
        <td><%= event.genre.genre_name %></td>
        <td><%= event.events_name %></td>
        <td><%= event.entrance_fee %>円</td>
        <td><%= event.sportst %></td>
        <td><%= event.persons %></td>
        <td><%= event.event_status %></td>
        <td><%= link_to '詳細', event %></td>
        <td><%= link_to '編集', edit_event_path(event) %></td>
        <td><%= link_to '消去', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>