<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <%= form.label :ジャンル %>
  <%= form.collection_select(:genre_id, Genre.where(is_valid: true), :id, :genre_name) %>
  </div>

  <div class="field">
    <%= form.label :イベント名 %>
    <%= form.text_field :events_name %>
  </div>

  <div class="field">
    <h4>開催日<%= form.date_field :holding %>
      <input type="text" id="datepicker"></h4>
  </div>

  <div class="field">
    <%= form.label :参加費 %>
    <%= form.number_field :entrance_fee %>
  </div>

  <div class="field">
    <%= form.label :スポーツ %>
    <%= form.select :sportst,[["体を動かさない",0],["体をやや動かす",1],["体を動かす",2],["体を激しく動かす",3]] %>
  </div>

  <div class="field">
    <%= form.label :人数 %>
    <%= form.number_field :persons %>
  </div>

  <div class="field">
    <%= form.label :説明文 %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :有効or無効 %>
    <%= form.select :event_status,[["有効",true],["無効",false]] %>
  </div>

  <div class="actions">
    <%= form.submit"更新する" ,class:"btn btn-primary" %>
  </div>
<% end %>

<script>
  $('#datepicker').datepicker({
        format: 'yyyy/mm/dd',language:'ja'
    });
</script>
