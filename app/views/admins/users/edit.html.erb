<h1>会員編集画面</h1>
<%= form_for(@user,url:admins_user_path(@user.id)) do |f| %>
  <p>会員ID</p>
    <%= @user.id %>
  <p>氏名</p>
    <%= f.text_field :family_name %>
    <%= f.text_field :first_name %>
  <p>フリガナ</p>
    <%= f.text_field :family_name_kana %>
    <%= f.text_field :first_name_kana %>
  <p>電話番号</p>
    <%= f.text_field :tel %>
  <p>メールアドレス</p>
    <%= f.text_field :email %>
  <p>会員ステータス</p>
  <p>
    <% if @user.deleted_at.nil? %>
      <%= f.radio_button :deleted_at , true ,checked: true %>
      <%= label_tag :deleted_at, "有効" %>
      <%= f.radio_button :deleted_at , false  %>
      <%= label_tag :deleted_at,"退会" %>
    <% else %>
      <%= f.radio_button :deleted_at , true %>
      <%= label_tag :deleted_at, "有効" %>
      <%= f.radio_button :deleted_at , false ,checked: true %>
      <%= label_tag :deleted_at,"退会" %>
    <% end %>
  </p>
<%= f.submit "変更を保存する",class:"btn btn-primary" %>
<% end %>

