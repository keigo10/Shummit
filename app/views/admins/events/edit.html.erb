<h1>Editing Event</h1>
<%= form_with(model: @event,url:"/admins/events/#{@event.id}", local: true) do |form| %>

  <div class="field">
  <%= form.label :ジャンル %>
  <%= form.collection_select(:genre_id, Genre.where(is_valid: true), :id, :genre_name) %>
  </div>

  <div class="field">
    <h4>イベント名</h4>
    <%= form.text_field :events_name, :size=>"30" %>
  </div>

  <div class="field">
    <h4>開催日</h4>
    <%= form.date_field :holding %>
  </div>

  <div class="field">
    <h4>参加費</h4>
    <%= form.text_field :entrance_fee %>
  </div>

  <div class="field" style="margin-top: 10px;">
    <h4>人数</h4>
    <%= form.number_field :persons %>
  </div>

  <div class="field" style="margin-top: 10px;">
    <h4>説明文</h4>
    <%= form.text_area :description, :size=>"60x5" %>
  </div>

  <div class="field" style="margin-top: 10px;">
    <%= form.label :開催 %>
    <%= form.select :event_status,[["有効",true],["無効",false]] %>
  </div>

  <h2>開催地</h2>
  <p>郵便番号</p>
  <%= form.text_field :postcode %>
  <p>都道府県</p>
  <%= form.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %>
  <p>市町村</p>
  <%= form.text_field :address_city %>
  <p>番地</p>
  <%= form.text_field :address_street %>
  <p>施設名</p>
  <%= form.text_field :address_building %>


  <div class="actions">
    <%= form.submit"更新する" ,class:"btn btn-primary" %>
  </div>
<% end %>