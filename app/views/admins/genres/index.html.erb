<div class="container">
  <h2>ジャンル追加・一覧画面</h2>
  <%= form_for(@genre,url:"/admins/genres") do |f| %>
  <b>ジャンル</b>
  <%= f.text_field :genre_name %>
  <%= f.radio_button :is_valid, true %>
  <%= label_tag :is_valid, "有効" %>
  <%= f.radio_button :is_valid, false %>
  <%= label_tag :is_vaild,"無効" %>
  <%= f.submit "追加",class:"btn btn-info" %>
  <% end %>
  <div class="row">
    <div class="col-xs-6">
  <table class="table table-bordered">
    <thead style="background-color: #d0e4e2;">
      <tr>
        <th>ジャンル</th>
        <th>状態</th>
        <th></th>
      </tr>
    </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= attachment_image_tag(genre, :genre_image, :fill, 150, 150, fallback: "no_image.jpg") %>
          </td>
        <td>
        <tr>
          <td>
            <%= genre.genre_name %>
          </td>
        <td>
          <%if genre.is_valid==true %>
            <p>有効</p>
          <% else %>
            <p>無効</p>
          <%end%>
        </td>
        <td class="text-center">
          <%= link_to "編集する", edit_admins_genre_path(genre.id),class:"btn btn-primary" %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>

</div>

</div>

